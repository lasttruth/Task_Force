<%= form_tag('sessions', method: :post) do %>
   <div class="form-group">
    <%= label_tag(:email, "Your name:") %>
     <%= text_field_tag(:user, :email) %>
  </div>
   <div class="form-group">
    <%= label_tag(:password, "Your password:") %>
    <%= password_field_tag(:password, nil, class: "form-control") %>
  </div>
   <div class="actions">
    <%= submit_tag("Sign In") %>
  </div>
 <% end %>
