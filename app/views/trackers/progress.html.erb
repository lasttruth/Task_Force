<%= form_for :tracker, url: tracker_path do |f| %>
  <% if @tracker.errors.any? %>
    <% @tracker.errors.full_messages.each do |msg| %>
      <div class="alert alert-danger"><%= msg%></div>
    <% end %>
  <% end %>
  <%= f.label :tracker %>:
  <%= f.text_field :tracker, {:class => 'form-control'} %><br />

  <%= f.submit %>
<% end %>
