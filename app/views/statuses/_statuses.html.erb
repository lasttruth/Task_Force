<% @game.statuses.each do |status| %>
  <div class="well">
    <p><strong><%= status.condition %></strong></p>
    <p><strong><%= status.completion %>%</strong>
      <%= link_to "change", edit_game_status_path(@game), :class => 'btn btn-default'%>
      <%= link_to "[X]", game_status_path(@game),
                          method: :delete,
                          :class => 'btn btn-default'%></p>
  </div>
<% end %>
